<Window Title="My Object Info" x:Class="MyIceLibrary.View.MainForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:tools="clr-namespace:Ascon.Pilot.Theme.Tools;assembly=Ascon.Pilot.Theme"
             xmlns:controls="clr-namespace:Ascon.Pilot.Theme.Controls;assembly=Ascon.Pilot.Theme"
             xmlns:local="clr-namespace:MyIceLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
     
    <Window.Resources>
        <ResourceDictionary Source="/MyIceLibrary.ext2;component/Style/JediStyle.xaml"  />
    </Window.Resources>
    <!--<Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <tools:SharedResourceDictionary Source="/Ascon.Pilot.Theme;component/Themes/StandardControls.xaml"/>
                <tools:SharedResourceDictionary Source="/Ascon.Pilot.Theme;component/Themes/sharedresources/sharedresources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="ButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyleBase}">
                <Setter Property="Background"  Value="{DynamicResource NormalBackground}"/>
                <Setter Property="BorderThickness"  Value="0"/>
                <Setter Property="MinWidth" Value="32" />
                <Setter Property="Padding" Value="0" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>-->


    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="96*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Label Content="ОБЩАЯ ИНФОРМАЦИЯ:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="235" FontSize="10" FontFamily="Arial Black" Foreground="#FF383838" FontWeight="Bold" Grid.Row="0" Grid.Column="1"/>

            <DataGrid x:Name="MainInfoDataGrid" ItemsSource="{Binding MainInfoValues}" IsReadOnly="True" AutoGenerateColumns="True" Grid.Row="1" Grid.Column="1">
                <DataGrid.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick"
                      Command="{Binding RowDoubleClickCommand}"
                      CommandParameter="{Binding SelectedItem, ElementName=MainInfoDataGrid}"/>
                </DataGrid.InputBindings>
            </DataGrid>
            
            <DataGrid x:Name="AttributesDataGrid" IsReadOnly="True" ItemsSource="{Binding AttributesValues}" AutoGenerateColumns="False" Grid.Row="3" Grid.Column="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Attribute Name" Binding="{Binding AttributeName}" Width="Auto" MinWidth="150"/>
                    <DataGridTemplateColumn Header="Values" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding Values}" Margin="-6,0,0,0" Padding="0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding .}" Width="200" Margin="10,0,0,0" Padding="0" TextAlignment="Left"/>
                                        </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Label Content="АТРИБУТЫ:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="238" FontSize="10" FontFamily="Arial Black" Foreground="#FF383838" FontWeight="Bold" Grid.Row="2" Grid.Column="1"/>

            <Button x:Name="DeleteButton" Content="УДАЛИТЬ ВЫДЕЛЕННЫЕ ОБЪЕКТЫ" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 5 0 0" Grid.Row="2" Grid.Column="1" Width="200" Height="24" Background="#FFE45757" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="10" Foreground="White"
                Command="{Binding DeleteSelectedCommand}"
                CommandParameter="{Binding SelectedItems, ElementName=MainInfoDataGrid}"
            />

            <Button x:Name="Button" Content="HFGHHD" HorizontalAlignment="Center" Width="238" Grid.Row="2" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
<!--Style="{StaticResource ButtonStyle}" xmlns:control="clr-namespace:Ascon.Pilot.Theme;assembly=Ascon.Pilot.Theme"-->