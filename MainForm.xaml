<Window Title="My Object Info" x:Class="MyIceLibrary.MainForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyIceLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="96*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Label Content="ОБЩАЯ ИНФОРМАЦИЯ:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="235" FontSize="10" FontFamily="Arial Black" Foreground="#FF383838" FontWeight="Bold" Grid.Row="0" Grid.Column="1"/>

            <DataGrid Name="MainInfoDataGrid" AutoGenerateColumns="False" Grid.Row="1" Grid.Column="1"/>

            <DataGrid x:Name="AttributesDataGrid" AutoGenerateColumns="False" Grid.Row="3" Grid.Column="1" />

            <Label Content="АТРИБУТЫ:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="238" FontSize="10" FontFamily="Arial Black" Foreground="#FF383838" FontWeight="Bold" Grid.Row="2" Grid.Column="1"/>

            <Button x:Name="DeleteButton" Click="DeleteButtonClick"  Content="УДАЛИТЬ ВЫДЕЛЕННЫЕ ОБЪЕКТЫ" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 5 0 0" Grid.Row="2" Grid.Column="1" Width="200" Height="24" Background="#FFE45757" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="10" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
